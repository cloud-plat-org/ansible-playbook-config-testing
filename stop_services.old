---
- name: Stop services on Ubuntu and Windows servers
  hosts: all_servers
  gather_facts: true
  become: true
  tasks:
    - name: Stop service on Ubuntu servers
      ansible.builtin.service:
        name: "{{ service_name }}"
        state: stopped
      when: ansible_os_family == "Debian"

    - name: Stop service on Windows servers
      ansible.builtin.service:
        name: "{{ service_name }}"
        state: stopped
      when: ansible_os_family == "Windows"

    - name: Display service status
      debug:
        msg: "Service {{ service_name }} stopped on {{ inventory_hostname }} ({{ ansible_os_family }})"
